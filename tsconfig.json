{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@mobile/*": ["apps/mobile/src/*"],
      "@web/*": ["apps/web/src/*"],
      "@utils/*": ["packages/utils/src/*"],
      "@ui/*": ["packages/ui/src/*"]
    },
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noEmit": true
  },
  "include": [
    "apps/mobile/src",
    "apps/web/src",
    "packages/utils/src",
    "packages/ui/src"
  ]
}
